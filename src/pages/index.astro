---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import SobreMi from "../components/SobreMi.astro";
import Proyectos from "../components/Proyectos.astro";
import Contacto from "../components/Contacto.astro"
import Footer from "../components/Footer.astro";
---

<Layout title="Porfolio - Alexis Ferradans | Desarrollador y Programador Web."
    description="Contáctame para crear una página, aplicacion web. Especializado en crear experiencias y soluciones digitales únicas.">
    <!--ENCABEZADO -->
    <Header/>
    <!-- SOBRE MI -->
    <SobreMi/>
    <!-- PROYECTOS -->
    <Proyectos/>
    <!-- CONTACTO -->
    <Contacto />
    <!-- FOOTER -->
    <Footer />


    
    

    <script>
        const $form = document.querySelector('#form')
        const $buttonMailto = document.querySelector('#button')

        $form.addEventListener('submit', handleSubmit)

        function handleSubmit(event) {
            event.preventDefault()
            const form = new FormData(this)

            $buttonMailto.setAttribute('href', `mailto:webdeveloper@alexisferradans.com?subject=nombre:${form.get('nombre')} correo:${form.get('email')} telefono:${form.get('telefono')} asunto:${form.get('asunto')}&body=${form.get('mensaje')}`)
            $buttonMailto.click()
        }
    </script> 

    <script>
        window.onscroll = () => {
        titulo();
        up();
};

        function titulo() {
            const { pageYOffset: posicion } = window;

            const elemento1 = document.getElementById("hiddenleft");
            const elemento2 = document.getElementById("hiddenright");

            elemento1.style.right = `${posicion * 0.2}px`;
            elemento2.style.left = `${posicion * 0.2}px`;
        }

        function up() {
            const scroll = document.documentElement.scrollTop;

            const buttonUp = document.getElementById("button-up");

            if (scroll > 180) {
                buttonUp.style.transform = "scale(1)";
            } else if (scroll < 180) {
                buttonUp.style.transform = "scale(0)";
            }
        }

        document.getElementById("button-up").addEventListener("click", () => {
        window.scrollTo({
        top: 0,
        behavior: "smooth"
            });
        });

    </script>
    
    
   

</Layout>
