---
import "@fontsource-variable/onest";
import "@fontsource/poppins";
import "@fontsource-variable/dm-sans";

interface Props {
  title: string;
  description: string;
}
const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/letter-a.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <div
      class="absolute top-0 z-[-2] h-[150vh] w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>

    <main>
      <slot />
    </main>

    

    <script
      src="https://kit.fontawesome.com/70c8b821c7.js"
      crossorigin="anonymous">
	</script>

<div
class="scale-0 flex justify-center items-center fixed bottom-10 right-4 sm:bottom-10 sm:right-8 md:bottom-10 md:right-8 lg:bottom-14 lg:right-16
  bg-gradient-to-r
  from-blue-600/30 via-indigo-600/30 to-purple-600/30
  hover:bg-blue-500/10
   hover:scale-105 rounded-full p-2 sm:p-3 md:p-3 lg:p-3 cursor-pointer transition-all active:translate-y-1" id="button-up">
<i class="text-2xl sm:text-3xl md:text-3xl lg:text-3xl text-gray-200 fa-solid fa-chevron-up"></i>
</div>
	
  </body>

</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Poppins", "Onest Variable", "dm-sans";
    user-select: none;
    scroll-behavior: smooth;
    color-scheme: dark light;
  }

  body {
    display: flex;
    justify-content: center;
    flex-direction: column;
    justify-content: center;
    background-color: #0e100f;
  }
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
